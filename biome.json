{
   "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
   "files": {
      "ignore": ["lib/", "node_modules/"]
   },
   "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 3,
      "lineWidth": 120
   },
   "linter": {
      "enabled": true,
      "rules": {
         "recommended": true
      }
   },
   "javascript": {
      "formatter": {
         "quoteStyle": "double",
         "trailingCommas": "es5"
      }
   },
   "organizeImports": {
      "enabled": true
   }
}
